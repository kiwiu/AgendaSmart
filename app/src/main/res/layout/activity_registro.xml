<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RegistroActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/inicio_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/spindle"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imagenInicio"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/agendasmart_icono"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="@string/Title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/museomoderno"
            android:text="@string/Registro"
            android:textColor="@color/Textcolor"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/vector_view"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/vector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cursorColor="@color/black"
            android:background="@drawable/stroke_btm"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/Nombre"
                android:layout_width="320dp"
                android:layout_height="67dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/user"
                android:drawablePadding="8dp"
                android:fontFamily="@font/museomoderno"
                android:hint="@string/Nombre"
                android:inputType="text"
                android:padding="8dp"
                 />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cursorColor="@color/black"
            android:background="@drawable/stroke_btm"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/Correo"
                android:layout_width="320dp"
                android:layout_height="67dp"
                android:drawableStart="@drawable/email"
                android:hint="@string/Email"
                android:background="@android:color/transparent"
                android:fontFamily="@font/museomoderno"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:drawablePadding="8dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:cursorColor="@color/black"
            android:background="@drawable/stroke_btm"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/Contraseña"
                android:layout_width="320dp"
                android:layout_height="67dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/lock"
                android:layout_marginTop="15dp"
                android:hint="@string/Password"
                android:fontFamily="@font/museomoderno"
                android:inputType="textPassword"
                android:padding="8dp"
                android:drawablePadding="8dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:cursorColor="@color/black"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke_btm"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/ConfirmarContraseña"
                android:layout_width="320dp"
                android:layout_height="67dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/lock"
                android:drawableEnd="@drawable/more"
                android:layout_marginTop="15dp"
                android:hint="@string/ConfirmPassword"
                android:fontFamily="@font/museomoderno"
                android:inputType="textPassword"
                android:padding="8dp"
                android:drawablePadding="8dp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/museomoderno"
                android:textColor="@color/black"
                android:text="@string/yaTengoCuenta" />

            <TextView
                android:id="@+id/txtIniciarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/museomoderno_bold"
                android:text="@string/cuenta"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:text="@string/cancelar"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/museomoderno"
            android:background="@drawable/btn_inicio"/>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:text="@string/btnRegistrar"
            android:fontFamily="@font/museomoderno"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="@drawable/btn_option_2"/>

    </LinearLayout>

</LinearLayout>